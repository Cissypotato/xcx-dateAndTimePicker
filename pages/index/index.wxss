.cover{position: fixed;top: 0;width: 100vw;height: 100vh;background: rgba(0, 0, 0, 0.4); z-index: 2; display: flex;justify-content: center;}
.pick-time{position:fixed; bottom:0px; left:0; width:100%; background:#fff; z-index:3;}
.pick-time>.title{width:100vw; height:3em; line-height:3em; border-bottom:1px solid #eee;}
.pick-time>.title>text {float:left; margin-left:5vw}
.pick-time>.title>icon {float:right; font-size:1.4em; color:#FF5722; padding-right:5vw;}
.pick-time>.date-picker{width:100vw; margin:5vw 0 0 0; font-size:0.8em; text-align:center; }
.scroll-view_H{ white-space: nowrap;}
.scroll-view-item_H{width:26.3vw;display: inline-block;height: 130rpx;margin-left:5vw; border-radius:4px; opacity:0.5; border:1px solid #e0e0e0;box-sizing: border-box;background:#fafafa;}
.scroll-view-item_H>t {width:100%; display:block; background:#009688; color:#fafafa;  border-radius:4px 4px 0 0; padding:0.6em 0 0.5em 0; font-weight:900;}
.scroll-view-item_H>b {width:100%; display:block;  color:#009688;  border-radius:0 0 4px 4px; padding:0.5em 0 0.6em 0;}
.pick-time>.time-picker{padding:0 5vw; margin:5vw 0 5vw 0;}
.pick-time .time-picker>.wrapper{border-top: 1px solid #f5f5f5; border-left: 1px solid #f5f5f5; box-sizing: border-box;display: flex;flex-wrap: wrap; }
.pick-time .time-item{width:25%;  height:18vw; line-height:18vw; box-sizing: border-box; border-bottom: 1px solid #f5f5f5; border-right: 1px solid #f5f5f5;text-align: center; color: #9e9e9e; font-size:0.8em;}
.pick-time .active{background: #009688; color: #e0f2f1;}
.pick-time .forbid{background: #fafafa; color: #e0e0e0;}
.pick-time>.btn-wrapper{height:18vw; width:100%;}
.pick-time>.btn-wrapper>.btn{ width:90vw; margin-left:5vw;  background: #00bcd4; color:#fff; text-align: center; border-radius:4px; height:12vw; line-height:12vw;  font-size:0.9em;}